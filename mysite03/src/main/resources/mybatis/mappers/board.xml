<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">
	<select id="findAllByPageAndKeyWord" parameterType="map">
		<choose>
			<when test='keyword == null'></when>
		</choose>
		<![CDATA[
		selete *
		from board
		where title like '%${keyword }%' or contents like '%${keyword }%'
		limit #{pageNo }, #{amount }
		]]>
	</select>
	
	<select id="getTotalCount" parameterType="string" resultType="integer">
		<choose>
			<when test='_parameter == "" or _parameter == null'>
				<![CDATA[
				selete count(*)
				from board
				]]>
			</when>
			<otherwise>
				<![CDATA[
				count(*)
				from board
				where title like '%${_parameter }%' or contents like '%${_parameter }%'
				]]>
			</otherwise>
		</choose>
	</select>
</mapper>